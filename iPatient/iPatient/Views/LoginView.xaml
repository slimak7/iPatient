<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iPatient.Views.LoginView"
             xmlns:local="clr-namespace:iPatient.ViewModels"
             x:DataType="local:StartPageViewModel"
             BackgroundColor="{StaticResource Background}">
    
    <VerticalStackLayout VerticalOptions="Center">

        
        <Entry x:Name="EmailLabel" Placeholder="Email" ReturnType="Next" Text="{Binding Email, Mode=TwoWay}"
               VerticalOptions="Center" PlaceholderColor="{StaticResource FontBasic_3}"
               Margin="5, 5, 5, 5" HorizontalTextAlignment="Center"></Entry>
        <Entry x:Name="PasswLabel" Placeholder="HasÅ‚o" IsPassword="True" Text="{Binding Password, Mode=TwoWay}"
               VerticalOptions="Center" PlaceholderColor="{StaticResource FontBasic_3}"
               Margin="5, 5, 5, 5" HorizontalTextAlignment="Center"></Entry>
        
    </VerticalStackLayout>
</ContentView>
