<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iPatient.Views.GenerateQRCodePage"
             xmlns:local="clr-namespace:iPatient.ViewModels"
             x:DataType="local:GenerateQRCodeViewModel"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI"
             BackgroundColor="{StaticResource Background}"
             Title="{Binding Title}">
    <VerticalStackLayout>
        <zxing:BarcodeGeneratorView Format="QrCode" Value="{Binding Code}" ForegroundColor="Black" WidthRequest="300" HeightRequest="300" Margin="10, 10, 10, 10"></zxing:BarcodeGeneratorView>
    </VerticalStackLayout>
</ContentPage>