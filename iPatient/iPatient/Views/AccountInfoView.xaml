<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iPatient.Views.AccountInfoView"
             xmlns:local="clr-namespace:iPatient.ViewModels"
             x:DataType="local:StartPageViewModel">
            
    <VerticalStackLayout VerticalOptions="Center">
        <Label Text="Twoje konto" FontSize="Large" TextColor="Black"
                       FontAttributes="Bold" HorizontalOptions="Center"></Label>

        <Label x:Name="EmailLabel" VerticalOptions="Center" Margin="5, 5, 5, 5" HorizontalTextAlignment="Center"></Label>
        <Label x:Name="FirstNameLabel" VerticalOptions="Center" Margin="5, 5, 5, 5" HorizontalTextAlignment="Center"></Label>
        <Label x:Name="LastNameLabel" VerticalOptions="Center" Margin="5, 5, 5, 5" HorizontalTextAlignment="Center"></Label>
        <Entry x:Name="PeselLabel" Placeholder="PESEL" PlaceholderColor="CadetBlue" VerticalOptions="Center" Margin="5, 5, 5, 5" HorizontalTextAlignment="Center" IsReadOnly="True"></Entry>
        <Entry x:Name="PhoneLabel" Placeholder="Nr tel" PlaceholderColor="CadetBlue" VerticalOptions="Center" Margin="5, 5, 5, 5" HorizontalTextAlignment="Center" IsReadOnly="True"></Entry>
        <Entry x:Name="StreetLabel" Placeholder="Ulica" PlaceholderColor="CadetBlue" VerticalOptions="Center" Margin="5, 5, 5, 5" HorizontalTextAlignment="Center" IsReadOnly="True"></Entry>
        <Entry x:Name="StreetNumberLabel" Placeholder="Nr ulicy/mieszkania" PlaceholderColor="CadetBlue" VerticalOptions="Center" Margin="5, 5, 5, 5" HorizontalTextAlignment="Center" IsReadOnly="True"></Entry>
        <Entry x:Name="CityLabel" Placeholder="Miasto" PlaceholderColor="CadetBlue" VerticalOptions="Center" Margin="5, 5, 5, 5" HorizontalTextAlignment="Center" IsReadOnly="True"></Entry>
        <Entry x:Name="PostCodeLabel" Placeholder="Kod pocztowy" PlaceholderColor="CadetBlue" VerticalOptions="Center" Margin="5, 5, 5, 5" HorizontalTextAlignment="Center" IsReadOnly="True"></Entry>
        
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button x:Name="LogInButton" Text="Edytuj" BackgroundColor="LightSeaGreen" BorderWidth="2"
                BorderColor="White" FontAttributes="Bold" Margin="5, 5, 5, 5" FontSize="Medium" CornerRadius="15"
                Command="{Binding LogInCommand}"/>
            <Button x:Name="RegisterButton" Text="Zapisz" BackgroundColor="SeaGreen"
                BorderWidth="2" BorderColor="White" FontAttributes="Bold" Margin="5, 5, 5, 5" FontSize="Medium" CornerRadius="15"
                Command="{Binding RegisterCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
